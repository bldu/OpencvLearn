set(3RDPARTY ${PROJECT_SOURCE_DIR}/3rdparty)

set(INCS
    ${3RDPARTY}/opencv_static/include/opencv4)

set(LIBS
    ${3RDPARTY}/opencv_static/lib)

include_directories(${INCS})

link_directories(${LIBS})

# use macro to conveniently build multiple source codes.    
macro(add_example name)
    add_executable(${name} ${name}.cpp)
    target_link_libraries(${name} libopencv_world.a)
endmacro()

add_example(mat)
add_example(read_img)
